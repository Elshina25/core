{
  "name": "core.xp",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "IT-Agency",
    "url": "https://www.it-agency.ru/"
  },
  "scripts": {
    "dev": "npm run server",
    "prod": "npm run build:prod && npm run server:prod",
    "stage": "npm run build:stage && npm run server:stage",
    "build": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:stage": "vite build --mode staging",
    "server": "cross-env NODE_ENV=development ts-node ./server",
    "server:prod": "cross-env NODE_ENV=production ts-node ./server",
    "server:stage": "cross-env NODE_ENV=staging ts-node ./server",
    "bundle-server": "ts-node ./scripts/bundleServer",
    "pm2": "npm run build:prod && pm2 start cross-env NODE_ENV=production ./server/index.js",
    "pm2:dev": "npm run build:prod && cross-env NODE_ENV=development ts-node ./server/index.js",
    "type-checking": "vue-tsc --noEmit",
    "eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "eslint:fix": "eslint --ext .js,.ts,.vue --max-warnings 0 --ignore-path .gitignore --fix .",
    "prettier": "prettier --check \"**/*.{js,ts,vue}\"",
    "prettier:fix": "prettier --write \"**/*.{js,ts,vue,css}\"",
    "lint": "npm run prettier && npm run eslint && npm run type-checking",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix && npm run type-checking",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.31",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/server-renderer": "^3.2.33",
    "@vueuse/core": "^9.13.0",
    "axios": "^1.1.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "maska": "^2.1.1",
    "pinia": "^2.0.23",
    "sirv": "^2.0.2",
    "swiper": "^8.4.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.9",
    "vite-plugin-ssr": "^0.4.40",
    "vue": "^3.2.33",
    "vue-marquee-text-component": "^2.0.1",
    "vue-multiselect": "^3.0.0-alpha.2",
    "vue-yandex-maps": "^0.12.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash-es": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vee-validate/rules": "^4.7.1",
    "@vue/eslint-config-typescript": "^10.0.0",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lodash-es": "^4.17.21",
    "postcss": "^8.4.18",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.1.8",
    "vee-validate": "^4.7.1",
    "vite-plugin-vue-type-imports": "^0.2.4",
    "vite-svg-loader": "^3.6.0",
    "vue-tsc": "^0.35.0"
  }
}
